# Server Configuration
PORT=3001
NODE_ENV=development

# Garmin Connect API
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=http://localhost:3001/auth/garmin/callback
GARMIN_BASE_URL=https://apis.garmin.com
GARMIN_OAUTH_AUTHORIZE_URL=https://connect.garmin.com/oauthConfirm
GARMIN_OAUTH_TOKEN_URL=https://connectapi.garmin.com/oauth-service/oauth/access_token
GARMIN_SCOPES=read,write
GARMIN_USERINFO_URL=https://apis.garmin.com/wellness-api/rest/user/id

# OpenAI API (for AI workout generation)
OPENAI_API_KEY=your_openai_api_key

# Database
DATABASE_PATH=./data/ai-coach.db

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# MCP Configuration
MCP_SERVER_NAME=ai-coach
MCP_SERVER_VERSION=1.0.0
